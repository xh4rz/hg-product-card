{
    "version": "0.0.1",
    "license": "MIT",
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "files": [
        "dist",
        "src"
    ],
    "repository": {
        "url": "https://github.com/xh4rz/hg-product-card",
        "type": "git"
    },
    "homepage": "https://harold-gonzalez.com",
    "engines": {
        "node": ">=10"
    },
    "scripts": {
        "start": "tsdx watch",
        "build": "tsdx build",
        "test": "tsdx test --passWithNoTests",
        "test:watch": "tsdx test --watch",
        "lint": "tsdx lint",
        "prepare": "tsdx build",
        "size": "size-limit",
        "analyze": "size-limit --why"
    },
    "peerDependencies": {
        "react": ">=16"
    },
    "husky": {
        "hooks": {
            "pre-commit": "tsdx lint"
        }
    },
    "prettier": {
        "printWidth": 80,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5"
    },
    "name": "hg-product-card",
    "author": "Harold Yesid Gonzalez Mancipe",
    "module": "dist/hg-product-card.esm.js",
    "size-limit": [
        {
            "path": "dist/hg-product-card.cjs.production.min.js",
            "limit": "10 KB"
        },
        {
            "path": "dist/hg-product-card.esm.js",
            "limit": "10 KB"
        }
    ],
    "devDependencies": {
        "@rollup/plugin-image": "^2.1.1",
        "@size-limit/preset-small-lib": "^8.0.0",
        "@types/react": "^18.0.15",
        "@types/react-dom": "^18.0.6",
        "husky": "^8.0.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "rollup-plugin-postcss": "^4.0.2",
        "size-limit": "^8.0.0",
        "tsdx": "^0.14.1",
        "tslib": "^2.4.0",
        "typescript": "^3.9.10"
    },
    "keywords": [
        "product",
        "card",
        "harold",
        "gonzalez"
    ],
    "eslintConfig": {
        "extends": "react-app",
        "rules": {
            "@typescript-eslint/no-redeclare": "off",
            "no-redeclare": "off"
        }
    },
    "dependencies": {
        "@babel/preset-env": "^7.18.10",
        "@babel/preset-react": "^7.18.6",
        "@types/react-test-renderer": "^18.0.0",
        "babel-jest": "^28.1.3",
        "jest": "^25.5.4",
        "react-test-renderer": "^18.2.0"
    },
    "jest": {
        "moduleNameMapper": {
            "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "identity-obj-proxy",
            "\\.(css|less|scss|sass)$": "identity-obj-proxy"
        }
    }
}